{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "types": ["cypress", "cypress-file-upload"],
    "typeRoots": ["./support", "node_modules/@types"],
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "types/*.d.ts",
    "support/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
